{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
  ],
  "commitMessagePrefix": ":wrench:",
  "dependencyDashboard": false,
  "enabledManagers": [
    "fvm",
    "pub",
    "gradle",
    "cocoapods",
    "github-actions",
    "gradle-wrapper",
  ],
  "labels": [
    "dependencies"
  ],
  "pruneBranchAfterAutomerge": true,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "groupName": "riverpod",
      "matchPackageNames": [
        "flutter_riverpod",
        "hooks_riverpod",
        "riverpod",
      ],
    }
  ]
}
