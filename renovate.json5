{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
  ],
  "dependencyDashboard": false,
  "enabledManagers": [
    "asdf",
    "pub",
    "gradle",
    "cocoapods",
    "github-actions",
    "gradle-wrapper",
  ],
  "labels": [
    "dependencies"
  ],
  "pruneBranchAfterAutomerge": true,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "groupName": "flutter",
      "matchPackageNames": [
        "dart",
        "flutter",
      ],
    },
    {
      "groupName": "riverpod",
      "matchPackageNames": [
        "flutter_riverpod",
        "hooks_riverpod",
        "riverpod",
        "riverpod_annotation",
        "riverpod_generator",
        "riverpod_lint",
      ],
    },
  ]
}
