{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
  ],
  "dependencyDashboard": false,
  "labels": [
    "dependencies"
  ],
  "pruneBranchAfterAutomerge": true,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
      ],
      "labels": [
        "dependencies",
        "ignore for release",
      ]
    },
    {
      "groupName": "flutter",
      "matchPackageNames": [
        "dart",
        "flutter",
      ],
    },
    {
      "groupName": "riverpod",
      "matchPackageNames": [
        "flutter_riverpod",
        "hooks_riverpod",
        "riverpod",
        "riverpod_annotation",
        "riverpod_generator",
        "riverpod_lint",
      ],
    },
    {
      "groupName": "isar",
      "matchPackageNames": [
        "isar",
        "isar_flutter_libs",
      ],
    },
    {
      "groupName": "firebase",
      "matchPackagePrefixes": [
        "firebase_",
      ]
    },
    {
      "groupName": "widgetbook",
      "matchPackagePrefixes": [
        "widgetbook",
      ]
    }
  ]
}
